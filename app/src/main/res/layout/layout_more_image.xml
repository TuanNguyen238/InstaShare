<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#060503"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customprofile"
        android:orientation="vertical">
        <View
            android:layout_width="44dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp">
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="#BF60605C"
                android:text="Xóa ảnh"
                android:textSize="18dp"
                android:drawableLeft="@drawable/deletepicture"/>
            <Button
                android:id="@+id/btn_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="60dp"
                android:backgroundTint="#BF60605C"
                android:text="Tải ảnh"
                android:textSize="18dp"
                android:drawableLeft="@drawable/savepicture"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

